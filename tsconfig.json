{
  "compilerOptions": {
    "types": ["node"],
    "useUnknownInCatchVariables": false,
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "src/core/types",
      "tests/testModules"
    ]
  },
  "include": ["src/**/*.ts", "tests"],
  "exclude": ["node_modules", "dist", "tests"]
}
